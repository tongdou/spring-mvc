<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="waiterBeforeAdvice" class="com.tongdou.aop.spring.advice.WaiterBeforeAdvice"/>
    <bean id="waiter" class="com.tongdou.aop.spring.advice.Waiter"/>
    <bean id="proxyWaiter" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:interceptorNames="waiterBeforeAdvice"
          p:target-ref="waiter"
          p:proxyTargetClass="true">
    </bean>

</beans>